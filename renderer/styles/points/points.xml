<!DOCTYPE Map [
    <!ENTITY srs900913 "+proj=merc +a=6378137 +b=6378137 +lat_ts=0.0 +lon_0=0.0 +x_0=0.0 +y_0=0 +k=1.0 +units=m +nadgrids=@null +no_defs +over">
]>
<Map background-color="white" srs="&srs900913;">
    <Style name="points">
        <Rule>
            <PointSymbolizer />
        </Rule>
    </Style>
    <Layer name="points" status="on" srs="&srs900913;">
        <StyleName>points</StyleName>
        <Datasource>
            <Parameter name="table">
            (
                SELECT geom
                FROM   hist_points 
                WHERE  '&date;'
                  BETWEEN valid_from AND COALESCE(valid_to, NOW())
            ) AS subquery
            </Parameter>

            <Parameter name="type">postgis</Parameter>
            <Parameter name="estimate_extent">false</Parameter>
            <Parameter name="extent">-20037508,-19929239,20037508,19929239</Parameter>
        </Datasource>
    </Layer>
</Map>
